@using TO.WebApp.MVC.Extensions
@model TO.WebApp.MVC.Models.Prescricao.PrescricaoViewModel

<div>
    @foreach (var item in Model.Itens)
    {
        <div class="row align-items-center">
            <div class="col-md-4">
                <img alt="QR Code" src="data:image/jpeg;base64,@item.QRCode" class="img-fluid">
            </div>
            <div class="col-md-8">
                <div class="form-group" style="padding-bottom:1em">
                    <label asp-for="@item.Nome" class="control-label"></label>
                    <input asp-for="@item.Nome" class="form-control" disabled/>
                </div>
                <div class="form-group" style="padding-bottom:1em">
                    <label asp-for="@item.Quantidade" class="control-label"></label>
                    <input asp-for="@item.Quantidade" class="form-control" disabled />
                </div>
                <div class="form-group" style="padding-bottom:1em">
                    <label asp-for="@item.IntervaloHoras" class="control-label"></label>
                    <input asp-for="@item.IntervaloHoras" class="form-control" disabled />
                </div>
            </div>
        </div>
        <hr />
    }
</div>